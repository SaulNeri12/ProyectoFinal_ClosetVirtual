<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Fondo circular blanco para botones -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
        <solid android:color="@color/white" />
        <stroke android:width="0dp" android:color="@android:color/transparent" />
    </shape>

    <!-- Fondo redondeado blanco -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <solid android:color="@color/white" />
        <corners android:radius="25dp" />
        <stroke android:width="0dp" android:color="@android:color/transparent" />
    </shape>

    <!-- Card con sombra suave -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Sombra -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/shadow_light" />
                <corners android:radius="16dp" />
            </shape>
        </item>
        <!-- Contenido -->
        <item android:bottom="2dp" android:right="2dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <corners android:radius="16dp" />
            </shape>
        </item>
    </layer-list>

    <!-- Card con sombra media -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Sombra -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/shadow_medium" />
                <corners android:radius="25dp" />
            </shape>
        </item>
        <!-- Contenido -->
        <item android:bottom="4dp" android:right="4dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <corners android:radius="25dp" />
            </shape>
        </item>
    </layer-list>

    <!-- BotÃ³n circular con sombra -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Sombra -->
        <item>
            <shape android:shape="oval">
                <solid android:color="@color/shadow_light" />
            </shape>
        </item>
        <!-- Contenido -->
        <item android:bottom="2dp" android:right="2dp">
            <shape android:shape="oval">
                <solid android:color="@color/white" />
            </shape>
        </item>
    </layer-list>

</resources>
