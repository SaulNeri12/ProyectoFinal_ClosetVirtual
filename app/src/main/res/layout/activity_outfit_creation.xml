<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:fillViewport="true"
    tools:context=".OutfitCreationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/header_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBack"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:backgroundTint="@color/white"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="25dp"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconSize="24dp"
                        app:iconTint="@color/icon_color" />
                </com.google.android.material.card.MaterialCardView>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnProfile"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:backgroundTint="@color/white"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="25dp"
                        app:icon="@drawable/ic_person"
                        app:iconSize="24dp"
                        app:iconTint="@color/icon_color" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TARJETA PARA TOP (CAMISA) CON IDs AÑADIDOS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_top"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/iv_top_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_top_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            tools:text="La irreverente" />

                        <ImageView
                            android:id="@+id/btn_top"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- TARJETA PARA BOTTOM (PANTALON) CON IDs AÑADIDOS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/iv_bottom_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_bottom_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            tools:text="Pantalón" />

                        <ImageView
                            android:id="@+id/btn_bottom"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- TARJETA PARA BODYSUIT CON IDs AÑADIDOS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bodysuit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/iv_bodysuit_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_bodysuit_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            tools:text="Bodysuit" />

                        <ImageView
                            android:id="@+id/btn_bodysuit"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- TARJETA PARA SHOES (ZAPATOS) CON IDs AÑADIDOS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_shoes"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/iv_shoes_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_shoes_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            tools:text="Zapatos" />

                        <ImageView
                            android:id="@+id/btn_shoes"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- TARJETA PARA ACCESSORY (ACCESORIO) CON IDs AÑADIDOS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_accessory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/iv_accessory_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_accessory_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            tools:text="Accesorio" />

                        <ImageView
                            android:id="@+id/btn_accessory"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Outfit name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Nombre del outfit"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOutfitName"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@android:color/transparent"
                        android:hint="Nombre del outfit"
                        android:inputType="textCapWords"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/text_primary_dark"
                        android:textColorHint="@color/gray_medium"
                        android:textSize="17sp"
                        android:theme="@style/InputStyle" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Outfit tag -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Etiquetas"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:selectionRequired="false"
                        app:singleLine="false"
                        app:singleSelection="false" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de Registrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUseOutfit"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:elevation="6dp"
            android:text="Guardar"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/button_primary"
            app:cornerRadius="24dp" />

    </LinearLayout>

</ScrollView>