                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="5dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="6dp">

                                <!-- ImageView: Imagen de la prenda tipo Bottom -->
