<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal que contiene toda la interfaz de la pantalla Mi Armario -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".ui.clothes_category_cards.ClothesCategoryCardsFragment">

    <!-- MaterialToolbar: Barra de herramientas con botones de navegación y título -->
    <include
        android:id="@+id/header_component"
        layout="@layout/header_card"
        android:layout_width="match_parent"
        android:layout_margin="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/filtered_search_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/header_component"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card con input y lupa -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_search"
                app:endIconTint="@color/gray_dark">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/filtered_garment_search_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Nombre de la prenda"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/gray_medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de filtro -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_filter"
            app:iconTint="@color/background_dark"
            android:contentDescription="Filtrar" />
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_filter_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/filtered_search_input_container"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="6dp"
        app:cardCornerRadius="25dp"/>

    <!-- FrameLayout: Contenedor que permite superponer elementos, aquí contiene el ScrollView con degradado -->
    <FrameLayout
        android:id="@+id/category_cards_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/search_filter_card_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ScrollView: Permite hacer scroll vertical del contenido con fondo degradado -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scroll_view_background">

            <!-- LinearLayout: Contenedor vertical que organiza las tarjetas de categorías -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CardView para la categoría "Top" - Parte superior del cuerpo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="10dp"
                    >

                    <!-- LinearLayout interno: Organiza el header y la grilla de la categoría Top -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- ConstraintLayout: Header de la categoría con título y contador -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Texto del título de la categoría "Top" -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Top"
                                android:textColor="@color/gray_dark"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                            <!-- Contador circular que muestra la cantidad de prendas tipo "Top" -->
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:text="8"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:backgroundTint="@color/gray_dark"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- GridLayout: Grilla que muestra las prendas de la categoría Top en 3 columnas -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="3"
                            android:rowCount="1"
                            android:orientation="horizontal"
                            android:padding="15dp">

                            <!-- MaterialCardView: Tarjeta individual para mostrar una prenda -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="5dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="6dp">

                                <!-- ImageView: Imagen de la prenda tipo Top -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@mipmap/garment_top_test"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp" />

                            </com.google.android.material.card.MaterialCardView>

                        </GridLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CardView para la categoría "Bottom" - Parte inferior del cuerpo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:layout_margin="10dp">

                    <!-- LinearLayout interno: Organiza el header y la grilla de la categoría Bottom -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- ConstraintLayout: Header de la categoría con título y contador -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

