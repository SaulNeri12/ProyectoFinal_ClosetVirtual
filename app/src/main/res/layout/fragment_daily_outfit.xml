<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:fillViewport="true"
    tools:context=".ui.dailyOutfit.DailyOutfitFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/header_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:icon="@drawable/ic_arrow_back"
                    app:iconTint="@color/icon_color"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnProfile"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:icon="@drawable/ic_person"
                    app:iconTint="@color/icon_color"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/ivShirtPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvShirtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camiseta"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/btnShirt"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">
                            <ImageView
                                android:id="@+id/ivPantPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvPantName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PantalÃ³n"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/btnPant"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">
                            <ImageView
                                android:id="@+id/ivBodysuitPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvBodysuitName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bodysuit"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/btnBodySuit"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">
                            <ImageView
                                android:id="@+id/ivShoesPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvShoesName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zapatos"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/btnShoes"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardBackgroundColor="@color/surface_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">
                            <ImageView
                                android:id="@+id/ivAccesoryPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/garment_top_test2" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvAccesoryName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accesorio"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/btnAccesory"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_add"
                            app:tint="@color/icon_color" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Nombre del outfit"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOutfitName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:hint="Nombre del outfit"
                    android:inputType="textCapWords"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/gray_medium"
                    android:textSize="17sp"
                    android:theme="@style/InputStyle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Etiquetas"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:selectionRequired="false"
                    app:singleLine="false"
                    app:singleSelection="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUseOutfit"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:elevation="6dp"
            android:text="Usar outfit"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/button_primary"
            app:cornerRadius="24dp" />

    </LinearLayout>
</ScrollView>