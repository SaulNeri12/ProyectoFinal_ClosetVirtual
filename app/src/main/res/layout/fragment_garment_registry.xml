<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".ui.garmentRegistry.GarmentRegistryFragment">

    <include
        android:id="@+id/header_component"
        layout="@layout/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenedor con Scroll para el formulario -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Card de la Imagen -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/garment_form_image"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:scaleType="centerCrop"
                        android:background="@color/surface_gray"
                        android:src="@drawable/rounded_button_light" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_camera"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/button_primary"
                        app:cornerRadius="32dp"
                        app:icon="@drawable/ic_camera"
                        app:iconTint="@android:color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:elevation="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Campo Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la prenda"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="4dp"
                app:cardCornerRadius="25dp"
                app:cardUseCompatPadding="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputName"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:hint="Nombre de la prenda"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/gray_medium"
                    android:textSize="14sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Campo Tag -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Etiqueta (Opcional)"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="4dp"
                app:cardCornerRadius="25dp"
                app:cardUseCompatPadding="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/gray_medium"
                    android:hint="@string/garment_tag_input_hint"
                    android:textSize="14sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Campo Categoría -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/garment_category_input_lbl"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="4dp"
                app:cardCornerRadius="25dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_dropdown"
                        app:tint="@color/gray_medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Campo Color -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/garment_color_input_txt"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="4dp"
                app:cardCornerRadius="25dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <Spinner
                        android:id="@+id/spinner_color"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_dropdown"
                        app:tint="@color/gray_medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Switch Estampado -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="4dp"
                app:cardCornerRadius="25dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/garment_has_print_switch"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchPrint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón de Registrar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRegister"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="@string/garment_add_garment_btn"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/button_primary"
                android:elevation="6dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
