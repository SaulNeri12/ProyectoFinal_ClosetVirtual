<?xml version="1.0" encoding="utf-8"?>
<!-- PANTALLA 2: REGISTRO (activity_register.xml) -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <!-- Header con flecha de regreso -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_arrow_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Perfil"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!-- Avatar con c치mara -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/circle_background" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:textAlignment="center"
                    android:text="Example.com"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="20sp" />

                <!-- Campo Nombre -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/name_field_tittle"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/text_hint_light" />


                <!-- Campo para el genero -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Genero"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/etGenero"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/text_hint_light" />

                <!-- Campo Fecha de Nacimiento -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/date_field_tittle"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/text_hint_light" />

                <!-- Campo contrase침a actual -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/old_password_field_tittle"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etContrasenaActual"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="textPassword"
                        android:paddingHorizontal="16dp"
                        android:paddingEnd="50dp"
                        android:textColor="@color/input_text"
                        android:textColorHint="@color/text_hint_light" />

                    <ImageView
                        android:id="@+id/ivShowPassword1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_eye" />

                </RelativeLayout>

                <!-- Campo contrase침a actual -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/new_password_field_tittle"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etNuevaContrasena"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="textPassword"
                        android:paddingHorizontal="16dp"
                        android:paddingEnd="50dp"
                        android:textColor="@color/input_text"
                        android:textColorHint="@color/text_hint_light" />

                    <ImageView
                        android:id="@+id/ivShowPassword2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_eye" />

                </RelativeLayout>

                <!-- Campo Confirmar Contrase침a -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/confirm_password_field_tittle"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="32dp">

                    <EditText
                        android:id="@+id/etConfirmarContrasena"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="textPassword"
                        android:paddingHorizontal="16dp"
                        android:paddingEnd="50dp"
                        android:textColor="@color/input_text"
                        android:textColorHint="@color/text_hint_light" />

                    <ImageView
                        android:id="@+id/ivShowPassword3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_eye" />
                </RelativeLayout>

                <!-- Bot칩n Registrar -->
                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button"
                    android:text="Editar"
                    android:textColor="@color/text_primary_white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/appearence_field_tittle"
            android:textColor="@color/text_primary_dark"
            android:textSize="20sp"
            android:margin="25dp"
            android:layout_marginTop="30dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/baseline_wb_sunny_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light mode"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="20sp" />

                <!-- Espaciador flexible que empuja al switch al extremo derecho -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/miSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light mode"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="20sp" />

                <!-- Espaciador flexible que empuja al switch al extremo derecho -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sharp_arrow_forward_ios_24"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
